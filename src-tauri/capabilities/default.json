{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-spawn",
    {
      "identifier": "shell:allow-execute",
      "allow": [{
        "args": true,
        "name": "fd",
        "cmd": "fd"
      },
      {
        "args": true,
        "name": "bin/fd/fd",
        "sidecar": true
      }
    ]
    }
  ]
}
