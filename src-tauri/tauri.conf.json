{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hyp",
  "version": "0.1.0",
  "identifier": "com.hyp.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "hyp",
        "width": 800,
        "height": 600,
        "visible": true
      },
      {
        "width": 530,
        "height": 800,
        "decorations": false,
        "transparent": true,
        "url": "./splashscreen.html",
        "label": "splashscreen",
        "fullscreen": false,
        "center": true,
        "shadow": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}